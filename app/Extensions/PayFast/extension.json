{
  "slug": "platform/payfast",
  "name": "payfast",
  "display_name": "PayFast Payment Gateway",
  "version": "1.0.0",
  "description": "Secure online payments via PayFast for reservations.",
  "author": "Platform Core Team",
  "homepage_url": "https://developers.payfast.io/",
  "entry_point": "bootstrap.php",
  "permissions": [
    "payfast.manage_credentials",
    "payfast.view_transactions"
  ],
  "hooks": {
    "events": [
      "reservation.payment.initiate",
      "reservation.payment.completed"
    ],
    "routes": {
      "public": [
        "POST /api/payfast-ipn"
      ],
      "admin": [
        "GET /admin/payfast",
        "POST /admin/payfast/settings"
      ]
    }
  }
}